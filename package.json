{
  "name": "docuformat",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "generate:icons": "node scripts/generate-icons.cjs",
    "cap:init": "npx cap init \"DocuFormat\" \"com.mypersoneight.docuformat\" --web-dir=dist",
    "cap:add:android": "npx cap add android || true",
    "cap:sync": "npx cap sync",
    "cap:copy": "npx cap copy",
    "cap:open:android": "npx cap open android",
    "build:android:debug": "npm run build && npm run cap:sync && cd android && ./gradlew assembleDebug",
    "build:android:release": "npm run build && npm run cap:sync && cd android && ./gradlew assembleRelease",
    "sync:icons-to-android": "node scripts/sync-icons-to-android.cjs"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "mammoth": "^1.7.1",
    "xlsx": "^0.18.5",
    "jszip": "^3.10.1",
    "@capacitor/core": "^5.0.4"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "@capacitor/cli": "^5.0.4",
    "@capacitor/android": "^5.0.4",
    "sharp": "^0.32.1"
  }
}